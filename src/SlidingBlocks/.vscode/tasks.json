{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "cmd",
    "isShellCommand": true,
    "args": [],

    "tasks": [
        {
            "taskName": "build",
            "args": [ "/C", "dotnet", "build" ],
            "isBuildCommand": true,
            "showOutput": "silent",
            "problemMatcher": "$msCompile"
        },
       {
            "taskName": "run",
            "args": [ "/C", "dotnet", "run" ],
            "showOutput": "always",
            "problemMatcher": "$msCompile"
        }
    ]
}